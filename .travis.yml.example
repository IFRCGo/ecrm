language: ruby
rvm:
- 2.7.2
cache: bundler
env:
  global:   
  - GH_REF=github.com/IFRCGo/ecrm
  - DEPLOY_BRANCH=main
  - PAGES_BRANCH=gh-pages
before_script:
- ". $HOME/.nvm/nvm.sh"
- nvm install $TRAVIS_NODE_VERSION
- nvm use $TRAVIS_NODE_VERSION
- npm install -g gulp
- npm install
script: gulp prod
deploy:
  provider: pages
  skip-cleanup: true
  github-token: $GITHUB_TOKEN
  keep-history: false
  on:
    branch: main
  local_dir: _site
  edge: true
  verbose: true
